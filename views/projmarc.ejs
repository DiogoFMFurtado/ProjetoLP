  <script>

    let thisArray = [];

    $.ajax({

      method: 'GET',
      url: '/auth/marcacoesGETAll',
      dataType: 'json',
      success:function(marcacoes){
        thisArray = marcacoes
        buildTable(thisArray);
        //console.log(thisArray)
      }
    })
    async function get_clientes() {
      const clientes = await fetch('/auth/clientsGET/')
      const data_clientes = await clientes.json()
      const nome_do_cliente = []
      for (let i = 0; i < thisArray.length; i++) {
        for (let a = 0; a < data_clientes.length; a++) {
          if (data_clientes[a]._id === thisArray[i].cliente) {
            nome_do_cliente.push(data_clientes[a].name)
          }
        }
      }
      //console.log(nome_do_cliente)
      return {nome_do_cliente}
    }

    async function buildTable(marcacoes){
      const data_cliente = await get_clientes();
      let table = document.getElementById('tabelaMarcacoes')

      for(let i = 0; i < marcacoes.length; i++){
        let row = `<div><tr>
                      <td>${marcacoes[i]._id}</td>
                      <td>${marcacoes[i].address}</td>
                      <td>${data_cliente.nome_do_cliente[i]}</td>
                      <td>${marcacoes[i].state}</td>
                      <td>${marcacoes[i].equipa}</td>
                      <td>
                        <a href="./ver_projeto_marcacoes">
                          <button type="button" class="btn btn-primary" onclick="store(${i})">Ver Projeto</button>
                        </a>
                      </td>
                      <td>
                        <form action="/auth/projDEL/${marcacoes[i]._id}/${marcacoes[i].cliente}" method="POST" class="projetoDEL">
                          <div class="projDelete">
                            <button type="submit" rel="tooltip" title="" class="btn btn-link" data-original-title="Edit Task">
                              <i class="tim-icons icon-trash-simple"></i>
                            </button>
                          </div>
                        </form>
                      </td>

                  </tr></div>`
        table.innerHTML += row
      }
    }

    function store(index) {

      let marcId = thisArray[index]._id;

      sessionStorage.setItem("marcId", marcId);

      location.href = "./ver_projeto_marcacoes";
    }

    $('#tabelaMarcacoes').on('submit', '.projetoDEL', function(e) {
      e.preventDefault();

      const $form = $(e.target);
      const action = $form.attr('action');

      $.ajax({
        method: 'DELETE',
        url: action,
        dataType: 'json',
        complete: function(data) {
          //console.log(data);
          //$form.replaceWith('<p>Apagado!</p>');
          window.location.href ="./projmarc"
        }
      })

    })

  </script>
  <script>
    async function get_avaliacoes(){
      const notas_de_avaliacoes = []
      const avaliacoes = await fetch('/auth/marcacoesGETAll/')
      const data_avaliacoes = await avaliacoes.json()
      const uma_estrela = []
      const duas_estrela = []
      const tres_estrela = []
      const quatro_estrela = []
      const cinco_estrela = []
      const total_sem_avaliacao = []
      for (let i=0; i<data_avaliacoes.length;i++){
        if (data_avaliacoes[i].aval_client ==="Sem Avaliação do Cliente"){
          total_sem_avaliacao.push(data_avaliacoes[i])
        }
      }
      for (let i=0; i<data_avaliacoes.length;i++){
        if(data_avaliacoes[i].aval_client === "1"){
          uma_estrela.push(data_avaliacoes[i])
        }else if(data_avaliacoes[i].aval_client === "2"){
          duas_estrela.push(data_avaliacoes[i])
        }else if(data_avaliacoes[i].aval_client === "3"){
          tres_estrela.push(data_avaliacoes[i])
        }else if(data_avaliacoes[i].aval_client === "4"){
          quatro_estrela.push(data_avaliacoes[i])
        }else if(data_avaliacoes[i].aval_client === "5"){
          cinco_estrela.push(data_avaliacoes[i])
        }
      }
      const total_com_aval = data_avaliacoes.length - total_sem_avaliacao.length
      notas_de_avaliacoes.push(uma_estrela.length, duas_estrela.length, tres_estrela.length,quatro_estrela.length,cinco_estrela.length)
      //console.log(notas_de_avaliacoes)
      document.getElementById("avaliacoes_total").innerHTML = "Avaliados: " + total_com_aval
      return {notas_de_avaliacoes};
    }
    async function get_avaliacoes_chart() {
      const data_avaliacoes = await get_avaliacoes();
      const ctx = document.getElementById('chart_avaliacoes_canvas').getContext('2d');
      const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ["1", "2","3","4","5"],
          datasets: [{
            //grouped: true,
            data: data_avaliacoes.notas_de_avaliacoes,
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1,
          }]
        },
        options: {
          legend:false,
          scales: {
            yAxes: [{
              ticks:{
                beginAtZero: true,
                stepSize: 1,
              }
            }]
          }
        }
      });
    }
    get_avaliacoes_chart();
  </script>
