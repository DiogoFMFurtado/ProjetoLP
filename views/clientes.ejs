  <script>

    let thisArray = [];
    //let clientId = $('#clientId').val();

    $.ajax({

      method: 'GET',
      url: '/auth/clientsGET',
      dataType: 'json',
      success:function(clients){
        thisArray = clients
        buildTable(thisArray);
       // console.log(thisArray);
      }
    })
    async function get_admin(){
      const admins = await fetch('/auth/allAdminsGET/')
      const data_admins = await admins.json()
      //console.log(data_admins)
      const primeiro_nome = []
      const ultimo_nome = []
      for (let i = 0; i<thisArray.length; i++){
        if (thisArray[i].hasAdmin === false){
          primeiro_nome.push("Não")
          ultimo_nome.push("Associado")
        }else if (thisArray[i].hasAdmin === true) {
          for (let a = 0; a < data_admins.length; a++) {
            if (thisArray[i].admin === data_admins[a]._id) {
              primeiro_nome.push(data_admins[a].firstName)
              ultimo_nome.push(data_admins[a].lastName)
            }
          }
        }
      }
      console.log(thisArray)
      console.log(primeiro_nome)
      console.log(ultimo_nome)
      return {primeiro_nome, ultimo_nome}
    }

    async function buildTable(clients) {
      const data = await get_admin();
      let table = document.getElementById('tabelaClientesAdmin')

      for(let i = 0; i < clients.length; i++){
        let row = `<table class="sortable"><tr>
                      <td>${clients[i]._id}</td>
                      <td>${clients[i].name}</td>
                      <td>${data.primeiro_nome[i] + " " + data.ultimo_nome[i]}</td>
                      <td>
                          <button type="button" class="btn btn-primary" onclick="store(${i})">Ver Cliente</button>
                      </td>
                  </tr></table >`
        table.innerHTML += row
      }
    }

    function store(index) {

      console.log("Trying to get clientId....")

      let clientId = thisArray[index]._id;

      sessionStorage.setItem("clientId", clientId);
      
      location.href = "./ver_cliente";
    }

   

  </script>
  <script>
    async function get_clientes(){
      const clientes_label = []
      const response = await fetch('/auth/clientsGET/')
      const data = await response.json()
      const valores_true = []
      const valores_false = []
      for (i=0; i<data.length;i++){
        if(data[i].hasAdmin === true){
          valores_true.push(data[i])
        }
      }
      for (i=0; i<data.length;i++){
        if(data[i].hasAdmin === false){
          valores_false.push(data[i])
        }
      }
      clientes_label.push(valores_true.length,valores_false.length)
      document.getElementById("clientes_total").innerHTML = "Total de clientes: " + data.length
      return {clientes_label};
    }
    async function get_clientes_chart() {
      const data = await get_clientes();
      const ctx = document.getElementById('chart_clientes_canvas').getContext('2d');
