  function tabela(trab){
  let table = document.getElementById('tabelaWorkersdisp')

  for(let i = 0; i < trab.length; i++){
    if(trab[i].pequipa == 'Não'){
      let row = `<tr>
                    <td>${trab[i]._id}</td>
                    <td>${trab[i].name}</td>
                </tr>`
      table.innerHTML += row
    }
  }
  }

  function sliders(trab){
    let slide1 = document.getElementById('slidemenu1')
    let slide2 = document.getElementById('slidemenu2')
    let slide3 = document.getElementById('slidemenu3')
    for(let x = 0; x < trab.length; x++){
      if(trab[x].pequipa == 'Não'){
        let row = `<option class="option1" value="${trab[x]._id}">${trab[x].name}</option>`
        slide1.innerHTML += row
        }
    }
    for(let y = 0; y < trab.length; y++){
      if(trab[y].pequipa == 'Não'){
        let row = `<option class="option2" value="${trab[y]._id}">${trab[y].name}</option>`
        slide2.innerHTML += row
      }
    }
    for(let z = 0; z < trab.length; z++){
      if(trab[z].pequipa == 'Não'){
        let row = `<option class="option3" value="${trab[z]._id}">${trab[z].name}</option>`
        slide3.innerHTML += row
      }
    }
  }

  $(document).ready(function () {
    $('#selecttrab').on('change', '.opcao_certa', function () {
        var allSelected = $(".opcao_certa").map(function () {
            return $(this).val();
        }).get();
        $(".opcao_certa option").removeAttr("disabled");
        $(".opcao_certa option:not(:selected):not([value='0'])").each(function () {
            if ($.inArray($(this).val(), allSelected) != -1) {
                $(this).attr('disabled', true);
            }
        });
    });
  });

  </script>
