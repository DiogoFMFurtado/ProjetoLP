  <script>

    let clientId = sessionStorage.getItem("clientId");
    console.log(clientId);
    let newArray = [];

    $.ajax({
      method:'GET',
      url: '/auth/clientGET' + '/' + clientId,
      dataType: 'json',
      success:function(client){
        newArray = client
        buildTable(newArray);
        console.log(newArray);
      }
    })

    function buildTable(client){
      let table = document.getElementById('tabelaClienteAdmin')

      for(let i = 0; i < client.length; i++){
        let row = `<tr>
                        <td>${client[i]._id}</td>
                        <td>${client[i].address}</td>
                        <td>${client[i].equipa}</td>
                        <td>${client[i].state}</td>
                        <td>
                          <button type="button" class="btn btn-primary" onclick="store(${i})">Ver Projeto</button>
                        </td>
                  </tr>`
        table.innerHTML += row
      }
    }

    function store(index) {

      console.log("Getting marcacaoId...");
      let marcacaoId = newArray[index]._id;
      sessionStorage.setItem("marcacaoId", marcacaoId);
      location.href = "./ver_projeto";

    }

    console.log(clientId);

    $.ajax({
      method: 'GET',
      url: '/auth/clientByIdGET/' + clientId,
      dataType: 'json',
      success: function(clientById) {
        console.log(clientById);
        removeDiv(clientById);
        buildH2(clientById);
        buildH2two(clientById);
      }
    })

    function removeDiv(clientById) {

      let divRetirar = document.getElementById('divRetirar');

      if (clientById.hasAdmin == false){
        let divis = `
          <div class="col-md-12">
            <form action="/auth/adminPUT" method="POST" class="formAdmin" >
              <div class="row">
                <div class="col-sm-2">
                  <div class="form-group hidden" id="procura">
                    <input type="text" name="admin" class="form-control" placeholder="Manager Name">
                  </div>
                  <div class="botao-de-despedir hidden" id="associar">
                    <button type="submit" id="btnDespedir" class="btn  btn-primary-smol">Associar</button>
                  </div>
                </div>
              </div>
            </form>
          </div>`
        divRetirar.innerHTML += divis
      } else {
        let divis = `
          <div class="card" id="cardProjeto">
            <div class="card-header">
              <h3>Manager Associado: ${clientById.admin}</h2>
            </div>
            <div class="card-body">
              <p>Confirme com o Manager neste momento associado, para poder associar-se:</p> 
            </div>
            <div class="card-footer">
              <button type="submit" id="btnDiss" class="btn  btn-primary-smol">Desassociar</button>
            </div>

          </div>
        `
        divRetirar.innerHTML += divis
      }

    }

    $('#divRetirar').on('submit', '.formAdmin' ,function(e) {
      e.preventDefault();
      
      const $form = $(e.target);
      let formData = $form.serialize();
      let action = $form.attr('action');

      $.ajax({
        method: 'PUT',
        url: action + '/' + clientId,
        dataType: 'json',
        data: formData,
        success: function(data) {
          console.log(data);
          $('#divRetirar').replaceWith('<h3>Manager Associado!</h3>')
        }
      })
    })

    function buildH2(clientById){
      
      let h2 = document.getElementById('nomeCliente')
      let p = `
              Nome do Cliente: ${clientById.name}
              `
      h2.innerHTML += p

    }

    function buildH2two(clientById){
    
      let h2two = document.getElementById('idCliente');
      let p2 = `
              ID do Cliente: ${clientById._id}
                `
      h2two.innerHTML += p2

    }


    $.ajax({
      method: 'GET',
      url: '/auth/getUserFeedback/' + clientId,
      dataType: 'json',
      success: function(userFeed) {
        arrayFeed = userFeed;
        console.log(arrayFeed);
        buildFeedbacks(arrayFeed)
      }
    })

    function buildFeedbacks(userFeed){
      let tabela = document.getElementById('tabelaFeeds')

      for(let i = 0; i < userFeed.length; i++){
        let row = `
                  <tr>
                    <td>
                      <p class="text-muted">${userFeed[i].feedback}</p>
                    </td>
                    <td class="td-actions text-right" id="feedDel">
                      <form action="/auth/apagarfeedback/${userFeed[i]._id}" method="POST">
                        <div class="feedDelete">
                          <button type="submit" rel="tooltip" title="" class="btn btn-link" data-original-title="Edit Task">
                            <i class="tim-icons icon-trash-simple"></i>
                          </button>
                        </div>
                      </form>
                    </td>
                  </tr>
                  `
        tabela.innerHTML += row
      }
    }

    $('#tabelaFeeds').on('submit', '#feedDel', function(e) {
      e.preventDefault();

      const $form = $(e.target);
      const action = $form.attr('action');

      $.ajax({
        method: 'DELETE',
        url: action,
        dataType: 'json',
        success: function(data) {
          console.log(data);
          $form.replaceWith('<p>Apagado!</p>');
        }
      })

    })


    
  </script>



  





