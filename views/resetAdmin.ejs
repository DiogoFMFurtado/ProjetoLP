<html lang="pt">
<head>
  <title>Ad: Redefenir Senha</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/assets/css/style.css">
</head>

<body>
<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <div class="icon d-flex align-items-center justify-content-center">
            <span class="fa fa-user-o"></span>
          </div>
          <h3 class="text-center mb-4">Administrador</h3>
    <form action="/auth/resetAdmin/<%= id %>" method="POST" class="login-form">
      <%- include ("./messages") %>
            <div class="form-group">
              <input pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Tem de ter pelo menos 1 número 1 maiúscula, 1 minuscula e 8 caracteres" required
               type="password" id="password" name="password" class="form-control rounded-left" placeholder="Coloque a nova password:" required
               value="<%= typeof password != 'undefined' ? password : '' %>"/>
            </div>
            <div class="form-group">
              <input pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Tem de ter pelo menos 1 número 1 maiúscula, 1 minuscula e 8 caracteres" required
               type="password" id="password2" name="password2" class="form-control rounded-left" placeholder="Confirme a password:" required
               value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
            </div>
            <div class="form-group d-md-flex"> 
              <div class="w-50"></div>
              <div class="w-50 text-md-right">
                <a href="/auth/loginAd">Voltar</a>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" id="submit" class="btn btn-primary rounded submit p-3 px-5">Atualizar Senha</button>
            </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/popper.js"></script>
<script src="/assets/js/bootstrap.min.js"></script>
<script src="/assets/js/main.js"></script>

</body>
</html>
            
            


 